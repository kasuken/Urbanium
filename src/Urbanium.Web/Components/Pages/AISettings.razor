@page "/ai-settings"
@inject CitizenAIService AIService
@inject WorldEngine WorldEngine
@inject IConfiguration Configuration

<PageTitle>AI Settings</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">AI Configuration</MudText>
<MudText Typo="Typo.subtitle1" Class="mb-4" Color="Color.Secondary">
    Configure AI-powered decision making for citizen agents.
</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Elevation="2">
            <MudText Typo="Typo.h6" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.Settings" Class="mr-2" />
                Endpoint Configuration
            </MudText>
            
            <MudStack Spacing="3">
                <MudTextField @bind-Value="_endpoint" Label="AI Endpoint" 
                    Variant="Variant.Outlined"
                    HelperText="LM Studio: http://localhost:1234/v1" />
                
                <MudTextField @bind-Value="_apiKey" Label="API Key" 
                    Variant="Variant.Outlined"
                    InputType="InputType.Password"
                    HelperText="Use 'lm-studio' for local LM Studio" />
                
                <MudTextField @bind-Value="_model" Label="Model Name" 
                    Variant="Variant.Outlined"
                    HelperText="Model loaded in LM Studio or OpenAI model name" />
                
                <MudSlider T="float" @bind-Value="_temperature" Min="0f" Max="2f" Step="0.1f" Color="Color.Primary">
                    Temperature: @_temperature.ToString("F1")
                </MudSlider>
                
                <MudSlider T="float" @bind-Value="_aiRatio" Min="0f" Max="1f" Step="0.1f" Color="Color.Secondary">
                    AI Decision Ratio: @_aiRatio.ToString("P0")
                </MudSlider>
                
                <MudSwitch @bind-Value="_enabled" Color="Color.Primary" Label="AI Enabled" />
            </MudStack>
            
            <MudAlert Severity="Severity.Info" Class="mt-4">
                Changes require application restart to take effect.
            </MudAlert>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Elevation="2">
            <MudText Typo="Typo.h6" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.Science" Class="mr-2" />
                Test AI Decision
            </MudText>
            
            @if (WorldEngine.State.Citizens.Count == 0)
            {
                <MudAlert Severity="Severity.Warning">
                    No citizens available. Load a scenario first.
                </MudAlert>
            }
            else
            {
                <MudSelect @bind-Value="_selectedCitizenId" Label="Select Citizen" Variant="Variant.Outlined" Class="mb-4">
                    @foreach (var citizen in WorldEngine.State.Citizens.Take(20))
                    {
                        <MudSelectItem Value="@citizen.Id">@citizen.Name</MudSelectItem>
                    }
                </MudSelect>
                
                <MudButton Variant="Variant.Filled" Color="Color.Primary" 
                    OnClick="TestAIDecision" Disabled="@(_isTestingAI || _selectedCitizenId == Guid.Empty)">
                    @if (_isTestingAI)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <span>Testing...</span>
                    }
                    else
                    {
                        <MudIcon Icon="@Icons.Material.Filled.PlayArrow" Class="mr-2" />
                        <span>Test AI Decision</span>
                    }
                </MudButton>
                
                @if (_testResult != null)
                {
                    <MudDivider Class="my-4" />
                    <MudText Typo="Typo.subtitle1" Class="mb-2">AI Decision Result:</MudText>
                    <MudSimpleTable Dense="true">
                        <tbody>
                            <tr>
                                <td><strong>Action</strong></td>
                                <td><MudChip T="string" Color="Color.Primary">@_testResult.Action</MudChip></td>
                            </tr>
                            <tr>
                                <td><strong>Reasoning</strong></td>
                                <td>@_testResult.Reasoning</td>
                            </tr>
                            <tr>
                                <td><strong>Confidence</strong></td>
                                <td>
                                    <MudProgressLinear Color="Color.Success" Value="@(_testResult.Confidence * 100)" />
                                    @_testResult.Confidence.ToString("P0")
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Need Priority</strong></td>
                                <td>@_testResult.NeedPriority</td>
                            </tr>
                            <tr>
                                <td><strong>Expected Outcome</strong></td>
                                <td>@_testResult.ExpectedOutcome</td>
                            </tr>
                        </tbody>
                    </MudSimpleTable>
                }
                
                @if (!string.IsNullOrEmpty(_testError))
                {
                    <MudAlert Severity="Severity.Error" Class="mt-4">
                        @_testError
                    </MudAlert>
                }
            }
        </MudPaper>
    </MudItem>
</MudGrid>

<MudPaper Class="pa-4 mt-4" Elevation="2">
    <MudText Typo="Typo.h6" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Analytics" Class="mr-2" />
        AI Decision Statistics
    </MudText>
    
    @if (WorldEngine.State.Citizens.Count == 0)
    {
        <MudAlert Severity="Severity.Info">No citizens to analyze.</MudAlert>
    }
    else
    {
        var totalDecisions = WorldEngine.State.Citizens.Sum(c => c.TotalDecisions);
        var aiDecisions = WorldEngine.State.Citizens.Sum(c => c.AIDecisions);
        var aiRatio = totalDecisions > 0 ? (double)aiDecisions / totalDecisions : 0;
        
        <MudGrid>
            <MudItem xs="12" md="3">
                <MudStack AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h4" Color="Color.Primary">@totalDecisions</MudText>
                    <MudText Typo="Typo.caption">Total Decisions</MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="12" md="3">
                <MudStack AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h4" Color="Color.Secondary">@aiDecisions</MudText>
                    <MudText Typo="Typo.caption">AI Decisions</MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="12" md="3">
                <MudStack AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h4" Color="Color.Success">@((totalDecisions - aiDecisions))</MudText>
                    <MudText Typo="Typo.caption">Rule-Based Decisions</MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="12" md="3">
                <MudStack AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h4" Color="Color.Info">@aiRatio.ToString("P1")</MudText>
                    <MudText Typo="Typo.caption">AI Ratio</MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
        
        <MudDivider Class="my-4" />
        
        <MudText Typo="Typo.subtitle1" Class="mb-2">Recent AI Decisions</MudText>
        <MudDataGrid Items="@GetRecentAIDecisions()" Dense="true" Hover="true">
            <Columns>
                <PropertyColumn Property="x => x.Name" Title="Citizen" />
                <TemplateColumn Title="Last Action">
                    <CellTemplate>
                        <MudChip T="string" Size="Size.Small" 
                            Color="@(context.Item.LastDecisionWasAI ? Color.Primary : Color.Default)">
                            @context.Item.LastAction
                        </MudChip>
                    </CellTemplate>
                </TemplateColumn>
                <TemplateColumn Title="Decision Type">
                    <CellTemplate>
                        @if (context.Item.LastDecisionWasAI)
                        {
                            <MudChip T="string" Size="Size.Small" Color="Color.Secondary" Icon="@Icons.Material.Filled.Psychology">AI</MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Size="Size.Small" Color="Color.Default" Icon="@Icons.Material.Filled.Rule">Rules</MudChip>
                        }
                    </CellTemplate>
                </TemplateColumn>
                <PropertyColumn Property="x => x.LastAIReasoning" Title="Reasoning" />
                <TemplateColumn Title="Confidence">
                    <CellTemplate>
                        @if (context.Item.LastAIConfidence.HasValue)
                        {
                            <MudProgressLinear Color="Color.Success" Value="@(context.Item.LastAIConfidence.Value * 100)" Style="width: 60px;" />
                        }
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
        </MudDataGrid>
    }
</MudPaper>

@code {
    private string _endpoint = "http://localhost:1234/v1";
    private string _apiKey = "lm-studio";
    private string _model = "local-model";
    private float _temperature = 0.7f;
    private float _aiRatio = 0.3f;
    private bool _enabled = true;
    
    private Guid _selectedCitizenId;
    private bool _isTestingAI = false;
    private CitizenDecisionResponse? _testResult;
    private string? _testError;
    
    protected override void OnInitialized()
    {
        // Load current configuration
        var aiSection = Configuration.GetSection("AI");
        _endpoint = aiSection["Endpoint"] ?? _endpoint;
        _apiKey = aiSection["ApiKey"] ?? _apiKey;
        _model = aiSection["Model"] ?? _model;
        
        if (float.TryParse(aiSection["Temperature"], out var temp))
            _temperature = temp;
        if (float.TryParse(aiSection["AIDecisionRatio"], out var ratio))
            _aiRatio = ratio;
        if (bool.TryParse(aiSection["Enabled"], out var enabled))
            _enabled = enabled;
    }
    
    private async Task TestAIDecision()
    {
        _isTestingAI = true;
        _testResult = null;
        _testError = null;
        
        try
        {
            var citizen = WorldEngine.State.Citizens.FirstOrDefault(c => c.Id == _selectedCitizenId);
            if (citizen == null)
            {
                _testError = "Citizen not found.";
                return;
            }
            
            var availableActions = citizen.GetAvailableActions(WorldEngine.State);
            _testResult = await AIService.GetDecisionAsync(citizen, WorldEngine.State, availableActions);
            
            if (_testResult == null)
            {
                _testError = "AI service returned no result. Check if LM Studio is running and the endpoint is correct.";
            }
        }
        catch (Exception ex)
        {
            _testError = $"Error: {ex.Message}";
        }
        finally
        {
            _isTestingAI = false;
        }
    }
    
    private IEnumerable<Citizen> GetRecentAIDecisions()
    {
        return WorldEngine.State.Citizens
            .Where(c => c.LastAction.HasValue)
            .OrderByDescending(c => c.LastDecisionWasAI)
            .ThenByDescending(c => c.TotalDecisions)
            .Take(10);
    }
}
