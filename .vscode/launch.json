{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch Urbanium.Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Urbanium.Web",
            "program": "${workspaceFolder}/src/Urbanium.Web/bin/Debug/net10.0/Urbanium.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Urbanium.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/Urbanium.Web/Views"
            }
        }
    ]
}
